  // $('.mainPart').css('padding-top', $('.header').height());
  if ($(window).width() < 600) {
    console.log($(window).width())
  } else if ($(window).width() > 600 && $(window).width() < 992) {
    console.log($(window).width())
  } else {
    console.log($(window).width())
  }
  //调用
  scrollOption()
})()
$(window).on('scroll', function () {
  // console.log($(window).height());
  scrollOption()
});
function scrollOption() {
  if ($(window).scrollTop() >= $(window).height()) {
    $('.toUp').show();
  }
  else {
    $('.toUp').hide();
  }
  if ($(window).scrollTop() >= $('.part2').offset().top && $(window).scrollTop() < $('.part4').offset().top) {
    $('.part3Bg').show();
    $('.part5Bg').hide();
    // console.log('现在是',$(window).scrollTop())
  }
  if ($(window).scrollTop() >= $('.part4').offset().top) {
    $('.part3Bg').hide();
    $('.part5Bg').show();
    // console.log('那现在是',$(window).scrollTop())
  }
}