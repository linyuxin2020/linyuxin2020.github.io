jQuery(document).ready(function () {
  jQuery(".callus-button").click(function () {
    var data = {};
    data.corporateName = jQuery("#corporateName").val();
    data.phone = jQuery("#phone").val()
    data.mail = jQuery("#mail").val()
    data.mailContent = jQuery("#mailContent").val();
    var tip = "";
    if (!data.corporateName) {
      tip = "请填写公司名称";
      popCenterWindow(tip);
      return;
    }
    if (!data.phone) {
      tip = "请填写电话";
      popCenterWindow(tip);
      return;
    }
    if (!data.mail) {
      tip = "请填写电子邮件";
      popCenterWindow(tip);
      return;
    }
    if (!data.mailContent) {
      tip = "请填写邮件内容";
      popCenterWindow(tip);
      return;
    }

    var ajaxurl = '/gomMail';
    jQuery.ajax({
      type: "POST",
      url: ajaxurl,
      dataType: 'json',
      contentType: 'application/json;charset=utf-8',
      data: JSON.stringify(data),
      success: function (response) {
        console.log(response)
        if (response.status == '200') {
          tip = "发送成功";
          popCenterWindow(tip);
        } else {
          tip = "发送失败，请稍后重试";
          popCenterWindow(tip);
        }
      },
      error: function () {
        tip = "请求失败，请稍后重试";
        popCenterWindow(tip);
      }
    })
  });
})
//关闭窗口的方法
jQuery(".close_btn,.popsure").click(function () {
  jQuery('.window').hide();
  jQuery('.mask').hide();
});
//定义弹出居中窗口的方法
function popCenterWindow(tip) {
  jQuery(".popname").text(tip)
  $('.mask').show();
  $('#center').show();
}

//菜单展示
jQuery(".min-nav-box .icon").click(function () {
  jQuery('.menu-box').show();
  jQuery('.mask-white').show();
});
jQuery(".menu-list .menu-a,.menu-close").click(function () {
  jQuery('.menu-box').hide();
  jQuery('.mask-white').hide();
});
